@model MVC.Models.Item
<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label for="exampleInputEmail1" asp-for="ItemName">Item Name</label>
                        <input type="text" class="form-control" id="inputName"  placeholder="Enter Item Name" asp-for="ItemName">
                    </div>
                    <div class="col-4">
                        <label for="borrower" asp-for="Borrower">Borrower</label>
                        <input type="text" class="form-control" id="borrower" placeholder="Borrower" asp-for="Borrower">
                    </div>
                    <div class="col-4">
                        <label for="borrower" asp-for="Lender">Lender</label>
                        <input type="text" class="form-control" id="lender" placeholder="Lender" asp-for="Lender">
                    </div>
                   
                </div>
              
                <div class="form-group row">
                    <div class="col-8 offset-2 text-center row" style="margin-top: 10px">
                        <div class ="col">
                            <input type="submit" class="btn btn-info w-75" value="Create"/>
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-75" asp-controller="Item" asp-action="Index">Back</a>
                        </div>
                    </div> 

                </div>
            </div>
        </div>
    </div>
</form>

