@model MVC.Models.ViewModels.ExpenseVM 
<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" style="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Expense.ExpenseName">Expense Name</label>
                       </div>
                    <div class="col-4">
                        <label asp-for="Expense.Ammount">Ammount</label>
                    </div>

                    <div class="col-4">
                        <label asp-for="Expense.ExpenseType">Expense Type</label>
                    </div>
                 </div>

                <div class="form-group row">
                  
                    <div class="col-4">
                        <input type="text" class="form-control" id="inputName" placeholder="Enter Expense Name" asp-for="Expense.ExpenseName">
                        <span asp-validation-for="Expense.ExpenseName"></span>
                    </div>

                    <div class="col-4">
                        <input type="number" class="form-control" id="ammount" placeholder="Ammount" asp-for="Expense.Ammount">
                        <span asp-validation-for="Expense.Ammount"></span>
                    </div>

                    <div class="col-4">
                        <select type="text" class="form-control" id="typeId"
                                placeholder="Expense Type" asp-for="Expense.TypeId" asp-items="@Model.TypeDropDown">
                            <option selected>--Select Expense-- </option>
                            </select>
                        <span asp-validation-for="Expense.TypeId"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 text-center row" style="margin-top: 10px">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-75" asp-controller="Expense" asp-action="Index">Back</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
            <partial name="_ValidationScriptsPartial"/>
    }
}